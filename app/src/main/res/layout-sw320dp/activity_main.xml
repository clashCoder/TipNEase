<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tipBackground"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/bill_label_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/bill_label_text"
            android:textColor="@color/editLabelColor"
            tools:text="Bill Total: " />

        <EditText
            android:id="@+id/bill_edit_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:maxLength="15"
            android:background="@drawable/edit_border"
            android:hint="@string/bill_hint_text"
            android:inputType="numberDecimal"
            android:textColor="@color/editLabelColor"
            android:textColorHint="#FFF"
            android:textSize="@dimen/hint_font_size"
            android:imeOptions="actionDone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tip_pct_label_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/tip_pct_label_text"
            android:textColor="@color/editLabelColor"
            tools:text="Tip Percentage: " />

        <EditText
            android:id="@+id/tip_pct_edit_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:maxLength="15"
            android:background="@drawable/edit_border"
            android:hint="@string/tip_pct_hint_text"
            android:inputType="numberDecimal"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="@dimen/hint_font_size"
            android:imeOptions="actionDone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tip_total_label_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/tip_label_text"
            android:textColor="@color/nonEditLabelColor"
            tools:text="Tip Total: " />

        <TextView
            android:id="@+id/tip_total_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/non_edit_border"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="0.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/total_label_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/total_label_text"
            android:textColor="@color/nonEditLabelColor"
            tools:text="Total with Tip: " />

        <TextView
            android:id="@+id/total_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/non_edit_border"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="0.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/num_people_label_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/num_people_label_text"
            android:textColor="@color/editLabelColor"
            tools:text="# of People: " />

        <EditText
            android:id="@+id/num_people_edit_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:maxLength="15"
            android:background="@drawable/edit_border"
            android:hint="@string/num_people_hint_text"
            android:inputType="number"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="@dimen/hint_font_size"
            android:imeOptions="actionDone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/total_per_person_label_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/total_per_person_label_text"
            android:textColor="@color/nonEditLabelColor"
            tools:text="Total Per Person: " />

        <TextView
            android:id="@+id/total_per_person_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/non_edit_border"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="0.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tip_per_person_label_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/tip_per_person_label_text"
            android:textColor="@color/nonEditLabelColor"
            tools:text="Tip Per Person: " />

        <TextView
            android:id="@+id/tip_per_person_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/non_edit_border"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="0.0" />

    </LinearLayout>
</LinearLayout>
</layout>